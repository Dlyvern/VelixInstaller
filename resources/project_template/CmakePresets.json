{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "velix-debug",
      "displayName": "Velix Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_PREFIX_PATH": "$env{VELIX_ROOT}"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "velix-debug",
      "configurePreset": "velix-debug"
    }
  ]
}
